        <% for(let map of userFavourite) { %>
          <tr>
            <td><%= map.title %></td>
            <td>
              <form method="GET" action="/urls/<%= %>">
              <button type="submit">Edit</button>
            </form>
          </td>
            <td>
              <form method="POST" action="/urls/<%= %>/delete">
