          </tr>
        <% } %>
      </tbody>
    </table>

    <h3>Contributions</h3>
    <table class="table">
      <tbody>
        <% for(let map of userContributions) { %>
          <tr>
            <td><%= map.title %></td>
            <td>
              <form method="GET" action="/contributions/:id <%= %>">
